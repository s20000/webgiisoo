
<div class='fileupload'>
	<div class='upload-btn'>
		<span class='btn-upload btn'> <i></i> <span>$lang.get('add.file')</span>
			<input id="fileupload" type="file" name="file" multiple />
		</span>
	</div>

	<div class='state upload'>
		<table>
			<tr>
				<td><span class='name'></span></td>
				<td style='width: 40%'><span id='progress'> <span
						class='bar'></span>
				</span>
					<p id='error'></p></td>
				<td><a href='javascript:;' onclick='_stopfileupload();'
					class='btn stop'><i class='glyphicon'></i>中止</a>
				</td>
			</tr>
		</table>
	</div>
</div>