<link href='/css/giisoo.css' rel='stylesheet' />
<link href='/css/chart.css' rel='stylesheet' />
<script type="text/javascript" src="/js/jquery-1.10.js"></script>
<script type="text/javascript" src="/hc/highcharts.js"></script>
<script type="text/javascript" src="/hc/highcharts-more.js"></script>

<div id='gauge'>
</div>

<script>
$(function () {                                                                     
    $(document).ready(function() { 
        Highcharts.setOptions({                                                     
            global: {                                                               
                useUTC: false                                                       
            }  
        });                                                                         
                                                                                    
        var chart;                                                                  
        $('#gauge').highcharts({                                                
            chart: {                                                                
                type: 'spline',                                                     
                animation: Highcharts.svg, // don't animate in old IE               
                marginRight: 10,                                                    
                events: {                                                           
                    load: function() {                                              
                                                                                    
                        // set up the updating of the chart each second             
                        var series = this.series[0];                                
                        setInterval(function() {
                        	$.post('/admin/gauge/mem/status', {}, function(d){
								if(d.used > 0) {
	                        		var x = (new Date()).getTime();
		                            series.addPoint([x, d.used], true, true);                    
								}
                        	});
                        }, 5000);                                                   
                    }                                                               
                }                                                                   
            },                                                                      
            credits:{
            	enabled: false
            },
            title: {                                                                
                text: "内存（${total}GB）"                                
            },                                                                      
            xAxis: {                                                                
                type: 'datetime',                                                   
                tickPixelInterval: 150                                              
            },                                                                      
            yAxis: {                                                                
                title: {                                                            
                    text: ''                                                   
                },                                                                  
                plotLines: [{                                                       
                    value: 0,                                                       
                    width: 1,                                                       
                    color: '#808080'                                                
                }]                                                                  
            },                                                                      
            tooltip: {                                                              
                formatter: function() {                                             
                        return '<b>'+ this.series.name +'</b><br/>'+                
                        Highcharts.dateFormat('%H:%M:%S', this.x) + '<br/>' +
                        Highcharts.numberFormat(this.y, 1) + "G";                         
                }                                                                   
            },                                                                      
            legend: {                                                               
                enabled: false                                                      
            },                                                                      
            exporting: {                                                            
                enabled: false                                                      
            },                                                                      
            series: [{                                                              
                name: '内存（GB）',                                                
                data: (function() {                                                 
                    // generate an array of random data                             
                    var data = [],                                                  
                        time = (new Date()).getTime(),                              
                        i;                                                          
                                                                                    
                    for (i = -9; i <= 0; i++) {                                    
                        data.push({                                                 
                            x: time + i * 1000,                                     
                            y: 0                                        
                        });                                                         
                    }                                                               
                    return data;                                                    
                })()                                                                
            }]                                                                      
        });                                                                         
    });                                                                             
                                                                                    
});                                                                                 				
</script>
